<?xml version="1.0" encoding="utf-8"?>
<support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg"
    android:id="@+id/RL"
    tools:context=".AKindActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="81%"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="14%"
        android:background="@null"
        android:text="B、C类火灾场所灭火器配置数量计算"
        android:textColor="#000003"
        android:textSize="39px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="16%"
        app:layout_marginTopPercent="28%"
        app:layout_marginLeftPercent="22%"
        android:background="@null"
        android:text="场所名称"
        android:textSize="28px"/>
    <EditText
        android:id="@+id/ed_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="46%"
        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="36%"
        android:textSize="28px"
        android:hint="场所名称"
        android:gravity="center|bottom"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="41%"
        app:layout_marginTopPercent="42%"
        app:layout_marginLeftPercent="22%"
        android:background="@null"
        android:text="计算单元保护面积（m2）"
        android:textSize="28px"/>
    <EditText
        android:id="@+id/ed_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="25%"
        app:layout_marginTopPercent="39%"
        app:layout_marginLeftPercent="57%"
        android:gravity="center|bottom"
        android:hint="保护面积"
        android:inputType="numberDecimal"
        android:textSize="31px"/>

    <Button
        android:id="@+id/bt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="26%"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="37%"
        android:text="显示结果"
        android:textSize="30px"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="59%"
        app:layout_heightPercent="23%"
        app:layout_marginTopPercent="62%"
        app:layout_marginLeftPercent="22%"
        android:gravity="center"
        android:textColor="#04a300"
        android:textSize="33px"/>



</support.PercentFrameLayout>
